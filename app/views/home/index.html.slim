  $(document).ready(function() {
    var navOffset;
    var zoom;

    if (window.innerWidth <= 767) {
      $(".navbar").addClass("navbar-static-top");
      navOffset = 0;
      zoom = 14;
    } else {
      $(".navbar").addClass("navbar-fixed-top");
      navOffset = $('.navbar').height();
      zoom = 15;
    }

    function init_map(){
      var options = {
        zoom: zoom,
        scrollwheel: false,
        draggable: false,
        streetViewControl: false,
        center:new google.maps.LatLng(53.1945, 50.150702000000024),
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      map = new google.maps.Map(document.getElementById("section_map"), options);
      marker1 = new google.maps.Marker({
        map: map,
        position: new google.maps.LatLng(53.1945, 50.150702000000024)
      });
      infowindow1 = new google.maps.InfoWindow({
        content: "<b>CrossFit SMR</b><br/>Дачная 20"
      });
      google.maps.event.addListener(marker1, "click", function(){
        infowindow1.open(map1, marker1);
      });
      infowindow1.open(map, marker1);
    }
    google.maps.event.addDomListener(window, 'load', init_map);

    $('.navbar li a').click(function(event) {
      if ($(this).data('section')) {
        window.location.hash = '#' + $(this).data('section');
        event.preventDefault();

        $('#section_' + $(this).data('section'))[0].scrollIntoView();
        scrollBy(0, -navOffset);
      }
    });

    if (window.location.hash) {
      $('#section_' + window.location.hash.replace('#', ''))[0].scrollIntoView();
      scrollBy(0, -navOffset);
    }
  });

